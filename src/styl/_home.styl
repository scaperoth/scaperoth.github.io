.post-item, .content-section
    text-align left
    padding rem(40px) 0
    border-bottom 3px solid lighten(third, 60%)
    center(rem(1000px))
    +below(rem(1000px))
        padding-left rem(20px)
        padding-right rem(20px)
    .datetime
        col(1/6)
        text-align center
        text-decoration none
        +below(cut)
            stack()
        .day
            mainFont(800)
            color main
            font-size rem(80px)
            line-height 1.6
            +below(cut)
                stack()
        .month-year
            color black
            font-size rem(18px)

    .content
        col(4/6)
        +below(cut)
            stack()
        a
            text-decoration none
        .date
            color main
        .post-title
            color black
            font-size rem(32px)
            +below(cut)
                text-align center
        .description
            .image-preview-container
                width 100%
                height 400px
                background-size cover
                background-repeat no-repeat
                &.top
                    background-position top
                &.bottom
                    background-position bottom
                &.left
                    background-position left
                &.right
                    background-position right
                &.center
                    background-position center
            blockquote
                padding-left 0
                margin-left 0
                opacity .8
            color texts
            mainFont(300)
            font-size rem(20px)
            a
                color link
                /*text-decoration underline*/

section.welcome
    max-width 100%
    text-align center
    border-bottom 1px dotted main
    padding 70px 0 100px 0
    background white
    color main
    h1
        mainFont(600)
        font-size 4em
    h3
        font-size 1.5em
    .description
        color lighten(main, 40%)
    .content.full
        col(6/6)