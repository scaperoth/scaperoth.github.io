sectionheight = 270px

.home
    padding-top sectionheight

.post-item, .content-section
    text-align left
    padding rem(40px) 0
    border-bottom 3px solid lighten(third, 60%)
    center(rem(1000px))
    +below(rem(1000px))
        padding-left rem(20px)
        padding-right rem(20px)
    .datetime
        col(1/6)
        text-align center
        text-decoration none
        +below(cut)
            stack()
        .day
            mainFont(800)
            color main
            font-size rem(80px)
            line-height 1.6
            +below(cut)
                stack()
        .month-year
            color black
            font-size rem(18px)

    .content
        col(4/6)
        +below(cut)
            stack()
        a
            text-decoration none
        .date
            color main
        .post-title
            color black
            font-size rem(32px)
            +below(cut)
                text-align center
        .description
            .image-preview-container
                width 100%
                height 400px
                background-size cover
                background-repeat no-repeat
                &.top
                    background-position top
                &.bottom
                    background-position bottom
                &.left
                    background-position left
                &.right
                    background-position right
                &.center
                    background-position center
            blockquote
                padding-left 0
                margin-left 0
                opacity .8
            color texts
            mainFont(300)
            font-size rem(20px)
            a
                color link
                /*text-decoration underline*/

section.welcome
    max-width 100%
    text-align center
    position absolute
    width 100%
    height sectionheight
    background main
    border-bottom dashed 20px main
    border-top dashed 20px main
    margin-top -20px
    padding 0
    -moz-background-clip: border;     /* Firefox 3.6 */
    -webkit-background-clip: border;  /* Safari 4? Chrome 6? */
    background-clip: border-box;      /* Firefox 4, Safari 5, Opera 10, IE 9 */
            
    -moz-background-clip: padding;     /* Firefox 3.6 */
    -webkit-background-clip: padding;  /* Safari 4? Chrome 6? */
    background-clip: padding-box;      /* Firefox 4, Safari 5, Opera 10, IE 9 */
            
    -moz-background-clip: content;     /* Firefox 3.6 */
    -webkit-background-clip: content;  /* Safari 4? Chrome 6? */
    background-clip: content-box;      /* Firefox 4, Safari 5, Opera 10, IE 9 */
    color fourth
    h1
        mainFont(600)
        margin-bottom 0
        font-size 4em
    h3
        margin-top 0
        font-size 1.5em
    .description
        color sec
    .content.full
        col(6/6)


.pagination
    width 100%
    text-align center
    margin 20px 0

    a:visited
        color main
    .page_num, a.page_num
        display inline-block
        padding rem(15px)
        margin rem(2px)
        border-radius 60%
        border rem(2px) solid third
        line-height 10px
        transition all .7s
        background third
        color fourth
    a.page_num:hover
            border-color third
            background transparent
            color third
    em.active
        background transparent
        color third

    .pagination-text, a.pagination-text
        color main
        font-size 2em
        margin 0 20px
        line-height 10px
        text-decoration none
        &:hover
            color third
        &.inactive
            color transparent


@media (min-width  1200px)

    .masonry-section
        .masonry-posts
            padding 0 50px
            -moz-column-count: 2;
            -webkit-column-count: 2;
            column-count: 2;

            .post-item
                display: inline-block;
                background: #fff;
                padding: 1em;
                margin: 0 0 1.5em;
                width: 100%;
                box-sizing: border-box;
                -moz-box-sizing: border-box;
                -webkit-box-sizing: border-box;
                box-shadow: 1px 1px 1px 0 #ccc;
                
                .content
                    width 100%
                    float none
                    clear both

                .datetime
                    text-align center
                    width 100%
                    float none
                    margin 0

                .post-title

                .description
                    width 100%